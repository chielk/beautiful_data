% Default theme as a base
\usetheme{default}

% Background gradient
\definecolor{bottomcolour}{rgb}{0.32,0.3,0.38}
\definecolor{middlecolour}{rgb}{0.08,0.08,0.16}
\setbeamertemplate{background canvas}[vertical shading][bottom=bottomcolour, middle=middlecolour, top=black]

% Font
\renewcommand\sfdefault{phv}
\renewcommand\familydefault{\sfdefault}
\setbeamerfont{title}{size=\Huge}
\setbeamerfont{frametitle}{size=\huge}
\setbeamercolor{frametitle}{bg=, fg=white}
\setbeamercolor{title}{bg=, fg=white}
\setbeamercolor{normal text}{bg=black, fg=white}

% Structure
\setbeamertemplate{items}[circle]
\setbeamercolor{structure}{fg=white}
\setbeamercolor{item}{fg=gray}
\setbeamercolor{itemize item}{fg=white}
\setbeamercolor{itemize subitem}{fg=white}
\setbeamercolor{itemize subsubitem}{fg=white}

% Features
\setbeamertemplate{headline}{}
\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{footline}{}
